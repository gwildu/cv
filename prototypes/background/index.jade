		script(src='/libraries/syntaxhighlighter/3/3.0.83/scripts/shCore.js')
		//script(src='/libraries/syntaxhighlighter/3/3.0.83/scripts/shBrushCss.js')
		script(src='/libraries/syntaxhighlighter/3/3.0.83/scripts/shBrushJScript.js')
